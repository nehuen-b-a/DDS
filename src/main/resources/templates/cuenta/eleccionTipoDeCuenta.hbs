    <div class="pt-5"></div>
    <div class="m-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-12">
                <h1 class="title text-center">Crea tu cuenta</h1>
                <div class="pt-5 pb-4"></div> <!-- separador -->
                <p class="mb-3 ms-3 fw-500">Elegir tipo de cuenta</p>
                <form class="me-4 ms-4" method="POST" action="/tipoCuenta">
                    <div class="row mb-2">
                        <label class="form-check d-flex justify-content-between w-100 choice" for="radioHumano">
                            <span class="fw-bold">Persona Humana</span>
                            <input class="form-check-input" type="radio" name="tipoCuenta" id="radioHumano" value="PERSONA_HUMANA" checked>
                        </label>
                    </div>
                    <div class="row">
                        <label class="form-check d-flex justify-content-between w-100 choice" for="radioJuridico">
                            <span class="fw-bold">Persona Jur√≠dica</span>
                            <input class="form-check-input" type="radio" name="tipoCuenta" id="radioJuridico" value="PERSONA_JURIDICA">
                        </label>
                    </div>
                    <div class="row mt-3 mb-5">
                        <button type="submit">Continuar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
